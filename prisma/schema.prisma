generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(auto()) @map("_id") @test.ObjectId
  name        String
  phoneNumber String
  email       String   @unique
  address     String
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  category  String
  price     Float
  stock     Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Comment {
  id        Int      @id @default(autoincrement())
  name      String
  role      String?
  company   String?
  comment   String
  createdAt DateTime @default(now())
}

model Setting {
  id        Int      @id @default(autoincrement())
  companyName String
  email       String
  phone       String
  address     String
  // Add more fields as needed
  updatedAt   DateTime @updatedAt
}
